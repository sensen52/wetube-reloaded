extends base.pug

block content
    if errorMessage 
        span= errorMessage

    form(method="POST")
        input(name="username", type="text", required:true,placeholder="유저이름")
        input(name="password", type="password", required:true,placeholder="비밀번호")
        input(type="submit", value="login")
        br
        a(href='/users/github/start') Continue with Github &rarr;

    hr
    div
        span Don't have an account?
        a(href="/join") Create now &rarr;
        